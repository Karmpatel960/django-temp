{% load static %}
<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="ATLAS: Virtual Classroom for Modern Education">
    <meta name="author" content="ATLAS Team">
    <title>Classroom - ATLAS</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: '#3B82F6',
                        secondary: '#1D4ED8',
                        dark: '#111827',
                    }
                }
            }
        }
    </script>
    
    <!-- Icons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    <style>
        :root {
            --color-primary: #3B82F6;
            --color-secondary: #1D4ED8;
            --color-text: #111827;
            --color-text-secondary: #4B5563;
            --color-background: #F9FAFB;
            --color-card: #FFFFFF;
        }
        
        .dark {
            --color-primary: #3B82F6;
            --color-secondary: #60A5FA;
            --color-text: #F9FAFB;
            --color-text-secondary: #D1D5DB;
            --color-background: #111827;
            --color-card: #1F2937;
        }
        
        body {
            color: var(--color-text);
            background-color: var(--color-background);
            transition: background-color 0.3s, color 0.3s;
        }
        
        .card {
            background-color: var(--color-card);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s, box-shadow 0.3s;
        }
        
        .dark .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>

<body class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 shadow-sm">
        <div class="container mx-auto px-4 py-3">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center space-x-2">
                    <i class='bx bxs-graduation text-2xl text-primary'></i>
                    <span class="font-bold text-xl text-dark dark:text-white">ATLAS</span>
                </div>
                
                <!-- Nav -->
                <nav class="hidden md:flex items-center space-x-1">
                    <a href="{% url 'studentDashboard' %}" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700">Dashboard</a>
                    <a href="#" class="px-3 py-2 rounded-md text-sm font-medium text-gray-900 dark:text-white bg-gray-100 dark:bg-gray-700">Classroom</a>
                    <a href="{% url 'studentProfile' %}" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700">My Profile</a>
                </nav>
                
                <!-- Right Section -->
                <div class="flex items-center space-x-4">
                    <!-- Theme Toggle -->
                    <button id="themeToggle" class="p-1 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none">
                        <i id="sunIcon" class='bx bx-sun text-2xl text-gray-500 dark:text-gray-400 hidden'></i>
                        <i id="moonIcon" class='bx bx-moon text-2xl text-gray-500 dark:text-gray-400 hidden'></i>
                    </button>
                    
                    <!-- Profile Dropdown -->
                    <div class="relative" id="profile-dropdown">
                        <button onclick="toggleDropdown()" class="flex items-center space-x-2 focus:outline-none">
                            <div class="h-8 w-8 rounded-full bg-primary text-white flex items-center justify-center">
                                {% if userDetails.studentPic %}
                                <img src="{{ userDetails.studentPic.url }}" alt="Profile" class="h-8 w-8 rounded-full object-cover">
                                {% else %}
                                <span class="text-sm font-medium">{{ request.user.first_name|slice:":1" }}{{ request.user.last_name|slice:":1" }}</span>
                                {% endif %}
                            </div>
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300 hidden md:block">{{ user.first_name }} {{ user.last_name }}</span>
                            <i class='bx bx-chevron-down text-gray-500 dark:text-gray-400'></i>
                        </button>
                        
                        <!-- Dropdown Menu -->
                        <div id="dropdown-menu" class="absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 z-10 hidden">
                            <div class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                                <p class="text-sm font-medium text-dark dark:text-white">{{ user.first_name }} {{ user.last_name }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Student</p>
                            </div>
                            <a href="{% url 'studentProfile' %}" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class='bx bx-user mr-2'></i>My Profile
                            </a>
                            <div class="border-t border-gray-200 dark:border-gray-700 my-1"></div>
                            <a href="{% url 'studentLogout' %}" class="block px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class='bx bx-log-out mr-2'></i>Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
        <div class="container mx-auto px-4 py-8">
            <!-- Page Title -->
            <div class="mb-8">
                <h1 class="text-2xl font-bold text-dark dark:text-white">Classroom</h1>
                <nav class="flex space-x-2 text-sm text-gray-500 dark:text-gray-400 mt-2">
                    <a href="{% url 'studentDashboard' %}" class="hover:text-primary">Home</a>
                    <span>/</span>
                    <span class="text-primary">Classroom</span>
                </nav>
            </div>

            {% if messages %}
            <div class="mb-8">
                {% for message in messages %}
                <div class="p-4 {% if message.tags == 'success' %}bg-green-100 text-green-700 dark:bg-green-800/20 dark:text-green-300{% elif message.tags == 'error' %}bg-red-100 text-red-700 dark:bg-red-800/20 dark:text-red-300{% else %}bg-blue-100 text-blue-700 dark:bg-blue-800/20 dark:text-blue-300{% endif %} rounded-lg">
                    {{ message }}
                </div>
                {% endfor %}
            </div>
            {% endif %}

            <!-- Classroom Info Card -->
            <div class="card rounded-lg overflow-hidden mb-8">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-dark dark:text-white">{{ class.classname }}</h2>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{{ class.classDepartment }} - {{ class.academicYear }}</p>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Class ID</h3>
                            <p class="text-lg font-semibold text-dark dark:text-white mt-1">{{ class.classId }}</p>
                        </div>
                        <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Faculty</h3>
                            <p class="text-lg font-semibold text-dark dark:text-white mt-1">{{ class.classFacultyName }}</p>
                        </div>
                        <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Join Code</h3>
                            <p class="text-lg font-semibold text-dark dark:text-white mt-1">{{ class.pk }}</p>
                        </div>
                    </div>
                </div>
            </div>

      <div class="row d-flex">
        <div class=" text-white col-lg-8 col-md-6  col-sm-12 h-100">
          <div class="card info-card sales-card pb-0 h-100" style="">
           <div class="row g-0" style="background: #4154f1; ">
             <div class="col-md-3 align-self-center ">
               <div class="card-icon rounded-circle d-flex align-items-center justify-content-center mx-auto" style="height: 6rem; width:6rem;">
                 <i class="bi bi-easel" style="font-size: 3rem; color: #4154f1"></i>
               </div>
             </div>
             <div class="col-md-9 bg-white pb-lg-5" style="height:272px;">
               <div class="card-body mb-3 mt-4">
                 <h5 class="card-title mb-0 pt-2 pb-0" style=" font-size:25px; text-transform:uppercase;">{{class.classname | truncatechars:20}}</h5>
                 <h5 class="card-title mt-0 pt-1 py-1" ><b>CLASS CODE : </b>{{class.pk}}</h5>
                 <h5 class="card-title pt-0 py-1" style="text-transform: uppercase;"><b>DEPARTMENT : </b><br>{{class.classDepartment | truncatechars:50}}</h5>
                 <h5 class="card-title pt-0 py-1" style="text-transform: uppercase;"><b>ACADEMIC YEAR : </b>{{class.academicYear | truncatechars:15}}</h5>
                 <h5 class="card-title pt-0 py-1" style="text-transform: uppercase;"><b>FACULTY NAME :</b> <br>{{class.classFacultyName | truncatechars:50}}</h5>
               </div>
             </div>
           </div>
         </div>
        </div>

        <!-- Time Table Details -->
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card mb-3 info-card sales-card pb-0">
           <div class="row g-0" style="background: #4154f1">
             <div class="col-sm-4 align-self-center ">
               <div class="card-icon rounded-circle d-flex align-items-center justify-content-center mx-auto">
                 <i class="bi bi-calendar-check" style="color: #4154f1"></i>
               </div>
             </div>
             <div class="col-sm-8 bg-white">
               <div class="card-body mt-0  pb-0">
                 <h5 class="card-title text-center my-0 pt-3 ">TIME TABLE</h5>
                 <div class="activity">
                   <div class="mx-auto mt-0 ">
                       <table class="table table-borderless ">
                         <tbody>
                             <tr >
                               <td class="py-1" style="color: #012970"><strong>MONDAY</strong></td>
                               {% if 'Monday' in timeTable %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; {{ timeTable|get_start_time:'Monday' }} - {{ timeTable|get_end_time:'Monday' }}</strong></td>
                               {% else %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; ---</strong></td>
                               {% endif %}
                             </tr>
                             <tr >
                               <td class="py-1" style="color: #012970"><strong>TUESDAY</strong></td>
                               {% if 'Tuesday' in timeTable %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; {{ timeTable|get_start_time:'Tuesday' }} - {{ timeTable|get_end_time:'Tuesday' }}</strong></td>
                               {% else %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; ---</strong></td>
                               {% endif %}
                             </tr>

                             <tr >
                               <td class="py-1" style="color: #012970"><strong>WEDNESDAY</strong></td>
                               {% if 'Wednesday' in timeTable %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; {{ timeTable|get_start_time:'Wednesday' }} - {{ timeTable|get_end_time:'Wednesday' }}</strong></td>
                               {% else %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; ---</strong></td>
                               {% endif %}
                             </tr>

                             <tr >
                               <td class="py-1" style="color: #012970"><strong>THURSDAY</strong></td>
                               {% if 'Thursday' in timeTable %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; {{ timeTable|get_start_time:'Thursday' }} - {{ timeTable|get_end_time:'Thursday' }}</strong></td>
                               {% else %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; ---</strong></td>
                               {% endif %}
                             </tr>
                             <tr >
                               <td class="py-1" style="color: #012970"><strong>FRIDAY</strong></td>
                               {% if 'Friday' in timeTable %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; {{ timeTable|get_start_time:'Friday' }} - {{ timeTable|get_end_time:'Friday' }}</strong></td>
                               {% else %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; ---</strong></td>
                               {% endif %}
                             </tr>

                             <tr>
                               <td class="py-1" style="color:#012970"><strong>SATURDAY</strong></td>
                               {% if 'Saturday' in timeTable %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; {{ timeTable|get_start_time:'Saturday' }} - {{ timeTable|get_end_time:'Saturday' }}</strong></td>
                               {% else %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; ---</strong></td>
                               {% endif %}
                             </tr>
                             <tr>
                               <td class="py-1" style="color:#012970"><strong>SUNDAY </strong></td>
                               {% if 'Sunday' in timeTable %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; {{ timeTable|get_start_time:'Sunday' }} - {{ timeTable|get_end_time:'Sunday' }}</strong></td>
                               {% else %}
                                <td class="py-1" style="color: #012970"><strong>: &nbsp; ---</strong></td>
                               {% endif %}
                             </tr>
                         </tbody>
                     </table>
                   </div>
                 </div>
               </div>
             </div>
           </div>
         </div>
                </div>
      </div>

      <div class="row">
        <!-- Right side columns -->
        <div class="col-lg-4">
          <!-- Meeting Details -->
          <div class="card mb-3 info-card sales-card pb-0">
           <div class="row g-0" style="background: #4154f1">
             <div class="col-md-4 align-self-center ">
               <div class="card-icon rounded-circle d-flex align-items-center justify-content-center mx-auto">
                 <i class="bi bi-camera-video" style=""></i>
               </div>
             </div>
             <div class="col-md-8 bg-white">
               <div class="card-body my-1">
                 <h5 class="card-title text-center">MEET LINK</h5>
                 <div class="activity text-center">
                   {% if class.classLink %}
                     <a type="button" href="{{class.classLink}}"  class="btn btn-primary col-sm-8" style="background: #4154f1" name="button">JOIN NOW</a>
                   {% else %}
                     <button type="button" class="btn btn-primary col-sm-8" style="background: #4154f1" name="button" disabled>JOIN NOW</button>
                   {% endif %}
                 </div>
               </div>
             </div>
           </div>
         </div><!-- End Meeting Details -->

                    <!-- Study Materials Section -->
                    <div class="card mb-3 info-card sales-card pb-0">
                        <div class="row g-0" style="background: #6A5ACD">
                            <div class="col-md-4 align-self-center ">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center mx-auto">
                                    <i class="bi bi-book" style=""></i>
                                </div>
                            </div>
                            <div class="col-md-8 bg-white">
                                <div class="card-body my-1">
                                    <h5 class="card-title text-center">STUDY MATERIALS</h5>
                                    <div class="activity">
                                        {% if materials %}
                                        <div class="list-group">
                                            {% for material in materials|slice:":5" %}
                                            <div class="list-group-item mb-2 border rounded">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h6 class="mb-0 fw-bold">{{ material.materialHeading }}</h6>
                                                    <span class="badge bg-primary">{{ material.materialType }}</span>
                                                </div>
                                                <p class="text-muted small mb-2">{{ material.materialDescription|truncatechars:100 }}</p>
                                                <div class="d-flex justify-content-between">
                                                    <small class="text-muted">{{ material.publishedTime|date:"M d, Y" }}</small>
                                                    <div>
                                                        {% if material.materialLink %}
                                                        <a href="{{ material.materialLink }}" target="_blank" class="btn btn-sm btn-outline-primary me-1">
                                                            <i class="bi bi-link-45deg"></i> View
                                                        </a>
                                                        {% endif %}
                                                        {% if material.materialFile %}
                                                        <a href="{{ material.materialFile.url }}" target="_blank" class="btn btn-sm btn-outline-success">
                                                            <i class="bi bi-download"></i> Download
                                                        </a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                            {% endfor %}
                                            {% if materials.count > 5 %}
                                            <div class="text-center mt-2">
                                                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#allMaterialsModal">
                                                    View All Materials
                                                </button>
                                            </div>
                                            {% endif %}
                                        </div>
                                        {% else %}
                                        <p class="text-center">No study materials available yet.</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- End Study Materials Section -->

                    <!-- Modal for All Materials -->
                    <div class="modal fade" id="allMaterialsModal" tabindex="-1" aria-labelledby="allMaterialsModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="allMaterialsModalLabel">All Study Materials</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    {% if materials %}
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Type</th>
                                                    <th>Date</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for material in materials %}
                                                <tr>
                                                    <td>
                                                        <strong>{{ material.materialHeading }}</strong>
                                                        <div class="text-muted small">{{ material.materialDescription|truncatechars:80 }}</div>
                                                    </td>
                                                    <td><span class="badge bg-primary">{{ material.materialType }}</span></td>
                                                    <td>{{ material.publishedTime|date:"M d, Y" }}</td>
                                                    <td>
                                                        {% if material.materialLink %}
                                                        <a href="{{ material.materialLink }}" target="_blank" class="btn btn-sm btn-outline-primary me-1">
                                                            <i class="bi bi-link-45deg"></i> View
                                                        </a>
                                                        {% endif %}
                                                        {% if material.materialFile %}
                                                        <a href="{{ material.materialFile.url }}" target="_blank" class="btn btn-sm btn-outline-success">
                                                            <i class="bi bi-download"></i> Download
                                                        </a>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    {% else %}
                                    <p class="text-center">No study materials available yet.</p>
                                    {% endif %}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

        <!-- Attendence Details -->
        <div class="card mb-3 info-card sales-card pb-0">
         <div class="row g-0" style="background: #4154f1">
           <div class="col-sm-4 align-self-center ">
             <div class="card-icon rounded-circle d-flex align-items-center justify-content-center mx-auto">
               <i class="bi bi-clipboard-data" style=""></i>
             </div>
           </div>
           <div class="col-sm-8 bg-white">
             <div class="card-body mt-0  ">
               <h5 class="card-title text-center mt-0 pt-3">ATTENDENCE</h5>
               <div class="activity">
                 <div class="mx-auto mt-0">
                     <table class="table table-borderless ">
                     <tbody>
                         <tr >
                           <td class="py-1" style="color: #012970"><strong>TOTAL CLASSES</strong></td>
                           <td class="py-1" style="color: #012970"><strong>: &nbsp; {{totalConducted}}</strong></td>
                         </tr>
                         <tr >
                           <td class="py-1" style="color: #012970"><strong>TOTAL ATTENDED</strong></td>
                           <td class="py-1" style="color: #012970"><strong>: &nbsp; {{totalAttended}}</strong></td>
                         </tr>
                         <tr>
                           <td class="py-1" style="color:#012970"><strong>TOTAL ABSENT</strong></td>
                           <td class="py-1" style="color:#012970"><strong >: &nbsp; {{totalAbsent}}</strong></td>
                         </tr>
                         <tr>
                           <td class="py-1" style="color:#012970"><strong>ATTENDENCE %</strong></td>
                           <td class="py-1" style="color:#012970"><strong>: &nbsp; {{attendencePercent}}</strong></td>
                         </tr>
                     </tbody>
                   </table>
                 </div>
               </div>
             </div>
           </div>
         </div>
       </div><!-- End Attendence Details -->

           <!-- Meeting Details -->
           <div class="card mb-3 info-card sales-card pb-0">
            <div class="row g-0" style="background: #4154f1">
              <div class="col-md-4 align-self-center ">
                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center mx-auto">
                  <i class="bi bi-columns-gap" style=""></i>
                </div>
              </div>
              <div class="col-md-8 bg-white">
                <div class="card-body my-1">
                  <h5 class="card-title text-center mb-0">OFFLINE MODE ?</h5>
                  <div class="activity ">
                    {% if classOfflineStatus.offlineStatus == 'NO' %}
                       <p><strong>Offline Mode : <span style="color:red;">NOT ACTIVE</span></strong></p>
                    {% else %}
                       <p class="my-1"><strong>Offline Mode : <span style="color:green;">ACTIVE</span></strong></p>
                       <p class="my-1"><strong>Dose Required : {{classOfflineStatus.vaccineRequired}}</strong></p>
                       <p class="my-1"><strong>Strength% Allowed : {{classOfflineStatus.classStrength}}</strong></p>
                           {% if opted %}
                                <p class="my-1"><strong>Opted For :<span style="color:green;"> OFFLINE </span></strong></p>
                                <a type="button" class="btn btn-primary col-sm-12 bg-danger my-2" style="border:red;" data-bs-toggle="modal" data-bs-target="#optOnline">Opt Online Mode</a>
                           {% else %}
                                 {% if eligible == True %}
                                      <p class="my-1"><strong>Eligibility : <span style="color:green;">ELIGIBLE</span>  </strong></p>
                                      {% if available %}
                                            <p class="my-1"><strong>Current Seat Availability : <span style="color:green;"> YES </span></strong></p>
                                            <br>
                                            <a type="button" class="btn btn-primary col-sm-12 bg-success my-2" style="border:green;" data-bs-toggle="modal" data-bs-target="#optOffline">Opt Offline Mode</a>
                                      {% else %}
                                          <p class="my-1"><strong>Current Seat Availability : <span style="color:red;"> NO </span> </strong></p>
                                      {% endif %}
                                 {% else %}
                                      <p class="my-1"><strong>Eligibility : <span style="color:red;">NOT ELIGIBLE</span></strong></p>
                                 {% endif %}
                           {% endif %}
                  </div>
                </div>
                <div class="mx-3">
                  <p class="text-muted" style="text-align:justify;"><strong>Note: </strong>Please update your vaccination status in Edit Profile Section</p>
                </div>
              </div>
            </div>

            <!-- Modal for Meet Link -->
            <form class="needs-validation" method='POST' novalidate  >
              {% csrf_token %}
              <div class="modal fade" id="optOffline" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
